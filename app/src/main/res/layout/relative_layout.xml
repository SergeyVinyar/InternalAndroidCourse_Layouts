<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_view"
        android:layout_width="@dimen/square_size_middle_small"
        android:layout_height="@dimen/square_size_middle_small"
        android:layout_alignParentEnd="true"
        android:background="@color/linear_bar_green"/>

    <View
        android:id="@+id/bottom_view"
        android:layout_width="@dimen/square_size_middle_small"
        android:layout_height="@dimen/square_size_middle_small"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/linear_bar_green"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/top_view"
        android:layout_above="@id/bottom_view"
        android:layout_toRightOf="@id/bottom_view"
        android:layout_toLeftOf="@id/top_view"
        android:background="@color/linear_bar_yellow"/>

</RelativeLayout>